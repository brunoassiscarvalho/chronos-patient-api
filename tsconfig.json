{
    "compilerOptions": {
        "target": "es2016",
        "lib": ["es6"],
        "module": "commonjs",
        "rootDirs": ["./src", "./test"],
        "resolveJsonModule": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts", "custom.d.ts", "index.ts"],
    "exclude": ["./node_modules/*", "build"]
}
